<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fisk.datagovernance.mapper.dataquality.ComponentNotificationMapper">
    <update id="updateBy" parameterType="java.util.Map" >
        UPDATE tb_component_notification SET del_flag = 0 WHERE template_id = #{templateId}
        AND module_id = #{moduleId} AND notice_id IN
        <foreach collection="noticeIds" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>
    <update id="updateByModuleIds" parameterType="java.util.Map" >
        UPDATE tb_component_notification SET del_flag = 0 WHERE notice_id = #{noticeId}
        AND template_id IN
        <foreach collection="templateIds" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
        AND module_id IN
        <foreach collection="moduleIds" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>
</mapper>