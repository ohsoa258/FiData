<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fisk.datagovernance.mapper.dataquality.ComponentNotificationMapper">
    <update id="updateBy" parameterType="java.util.Map" >
        UPDATE tb_component_notification SET del_flag = 0 WHERE del_flag = 1
        <if test="noticeIds !=null and noticeIds.size>0">
        AND notice_id IN
        <foreach collection="noticeIds" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
        </if>
        <if test="templateIds !=null and templateIds.size>0">
        AND template_id IN
        <foreach collection="templateIds" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
        </if>
        <if test="moduleIds !=null and moduleIds.size>0">
        AND module_id IN
        <foreach collection="moduleIds" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
        </if>
    </update>
</mapper>